<%- include('../layouts/header') -%>
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <h1 class="m-0 text-dark">Order id - <%= order.order_id %></h1>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->

                <!-- Main content -->
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- left column -->
                            <div class="col-md-10 m-auto">
                                <!-- general form elements -->
                                <div class="card card-primary">
                                    <!-- <div class="card-header">
                                        <h3 class="card-title"></h3>
                                    </div> -->
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <table>
                                                    <th>Order Status</th>
                                                    <td>
                                                        <input type="hidden" name="order_id" class="order_id" value="<%= order.order_id %>">
                                                        <select name="order_status" id="orderStatus" class="form-control ml-3">
                                                            <option value="pending" <% if (order.order_status === 'pending') { %>selected<% } %>>Pending</option>
                                                            <option value="processing" <% if (order.order_status === 'processing') { %>selected<% } %>>Processing</option>
                                                            <option value="shipped" <% if (order.order_status === 'shipped') { %>selected<% } %>>Shipped</option>
                                                            <option value="delivered" <% if (order.order_status === 'delivered') { %>selected<% } %>>Delivered</option>
                                                            <option value="refunded" <% if (order.order_status === 'refunded') { %>selected<% } %>>Refunded</option>
                                                            <option value="cancelled" <% if (order.order_status === 'cancelled') { %>selected<% } %>>Cancelled</option>
                                                        </select>
                                                    </td>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mt-5">
                                                <table class="table">
                                                    <tr>
                                                        <th>Sr. no.</th>
                                                        <th>Product Image</th>
                                                        <th>Product Name</th>
                                                        <th>quantity</th>
                                                        <th>Size</th>
                                                        <th>Unit Price</th>
                                                        <th>Total Price</th>
                                                    </tr>
                                                    <% order.products.forEach((product, index) => { %>
                                                    <tr>
                                                        <td><%= (index + 1) %></td>
                                                        <td>
                                                            <img src="<%= product.image_url %>" alt="" style="width: 150px;" />
                                                        </td>
                                                        <td><%= product.title %></td>
                                                        <td><%= product.quantity %></td>
                                                        <td><%= product.size.toUpperCase() %></td>
                                                        <td><%= product.price %></td>
                                                        <td><%= (product.quantity * product.price) %></td>
                                                    </tr>
                                                    <% }); %>
                                                    <tr>
                                                        <td class="text-right" colspan="6">Delivery Charges</td>
                                                        <td>50</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-right" colspan="6">Total</th>
                                                        <th><%= order.total_price %></th>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mt-5">
                                                <h5>Payment</h5>
                                            </div>
                                            <div class="col-md-12">
                                                <table>
                                                    <tr>
                                                        <th>Payment Status: </th>
                                                        <td>Paid</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Transaction id: </th>
                                                        <td><%= order.transaction_id %></td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mt-5">
                                                <h5>Shipping Address</h5>
                                            </div>
                                            <div class="col-md-12">
                                                <table>
                                                    <tr>
                                                        <th>Name: </th>
                                                        <td><%= order.shipping_address.first_name + " " + order.shipping_address.last_name %></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Email: </th>
                                                        <td><%= order.shipping_address.email %></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Phone: </th>
                                                        <td><%= order.shipping_address.phone %></td>
                                                    </tr>
                                                    <tr>
                                                        <th style="vertical-align: baseline;">Address: </th>
                                                        <td class="pl-2">
                                                            <p class="mb-0"><%= order.shipping_address.address1 %>, <%= order.shipping_address.address2 %>,</p>
                                                            <p class="mb-0"><%= order.shipping_address.city %> - <%= order.shipping_address.postal_code %></p>
                                                            <p class="mb-0"><%= order.shipping_address.region %>, <%= order.shipping_address.country %></p>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
<%- include('../layouts/footer') -%>
