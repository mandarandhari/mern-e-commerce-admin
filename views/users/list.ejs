<%- include('../layouts/header') -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Users</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">List</h3>
      
                            <div class="card-tools">
                                <a href="/user/add" class="btn btn-primary btn-sm float-left">Add User</a>
                                <form action="" method="get" class="float-right">
                                    <div class="input-group input-group-sm mt-0 ml-2" style="width: 150px;">
                                        <input type="text" name="searchterm" class="form-control float-right" placeholder="Search" value="<%= searchterm %>">
        
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>Nr.</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Created On</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (users.length) { %>
                                    <% var nr = (limit * (current - 1)) + 1; %>
                                    <% users.forEach((user, index) => { %>
                                    <tr>
                                        <td><%= nr + index %></td>
                                        <td><%= user.name %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.created_at %></td>
                                        <td>
                                            <a href="/user/edit/<%= user._id %>" class="btn btn-sm btn-primary">Edit</a>
                                            <a href="/user/delete/<%= user._id %>" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">
                                                <span>No users found</span>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                        <% if (pages > 0) { %>
                            <ul class="pagination text-center float-right mb-0">
                            <% if (current == 1) { %>
                                <li class="disabled page-item">
                                    <span class="page-link">First</span>
                                </li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="/users?page=1">First</a>
                                </li>
                            <% } %>
                
                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                            <% if (i !== 1) { %>
                                <li class="disabled page-item">
                                    <a class="page-link">...</a>
                                </li>
                            <% } %>
                
                            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                                <li class="active page-item">
                                    <a class="page-link"><%= i %></a>
                                </li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="/users?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < pages) { %>
                                <li class="disabled page-item">
                                    <a class="page-link">...</a>
                                </li>
                            <% } %>
                            <% } %>
                
                            <% if (current == pages) { %>
                                <li class="disabled page-item">
                                    <a class="page-link">Last</a>
                                </li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="/users?page=<%= pages %>">Last</a>
                                </li>
                            <% } %>
                            </ul>
                            <% } %>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
    <div class="p-3">
        <h5>Title</h5>
        <p>Sidebar content</p>
    </div>
</aside>
<!-- /.control-sidebar -->

<%- include('../layouts/footer') -%>