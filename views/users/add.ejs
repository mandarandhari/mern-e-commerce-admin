<%- include('../layouts/header') -%>
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">User</h1>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->

                <!-- Main content -->
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- left column -->
                            <div class="col-md-8 m-auto">
                                <!-- general form elements -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Add</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <!-- form start -->
                                    <form role="form" method="POST" action="/user/add">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input type="text" class="form-control <% if (typeof user.nameError !== 'undefined' && user.nameError && user.nameError.length) { %> is-invalid <% } %>" name="name" id="name" placeholder="Enter name" value="<% if (typeof user.name !== 'undefined' && user.name && user.name.length) { %><%= user.name %><% } %>">
                                                <% if (typeof user.nameError !== 'undefined' && user.nameError && user.nameError.length) { %>
                                                <div class="invalid-feedback" role="alert">
                                                    <span><%= user.nameError %></span>
                                                </div>
                                                <% } %>
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input type="email" class="form-control <% if (typeof user.emailError !== 'undefined' && user.emailError && user.emailError.length) { %> is-invalid <% } %>" name="email" id="email" placeholder="Enter email" value="<% if (typeof user.email !== 'undefined' && user.email && user.email.length) { %><%= user.email %><% } %>">
                                                <% if (typeof user.emailError !== 'undefined' && user.emailError && user.emailError.length) { %>
                                                <div class="invalid-feedback" role="alert">
                                                    <span><%= user.emailError%></span>
                                                </div>
                                                <% } %>
                                            </div>
                                            <div class="form-group">
                                                <label for="password">Password</label>
                                                <input type="password" class="form-control <% if (typeof user.passwordError !== 'undefined' && user.passwordError && user.passwordError.length) { %> is-invalid <% } %>" name="password" id="password" placeholder="Password">
                                                <% if (typeof user.passwordError !== 'undefined' && user.passwordError && user.passwordError.length) { %>
                                                <div class="invalid-feedback" role="alert">
                                                    <span><%= user.passwordError %></span>
                                                </div>
                                                <% } %>
                                            </div>
                                            <div class="form-group mb-0">
                                                <label for="confirmPassword">Confirm Password</label>
                                                <input type="password" class="form-control <% if (typeof user.confirmPasswordError !== 'undefined' && user.confirmPasswordError && user.confirmPasswordError.length) { %> is-invalid <% } %>" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password">
                                                <% if (typeof user.confirmPasswordError !== 'undefined' && user.confirmPasswordError && user.confirmPasswordError.length) { %>
                                                <div class="invalid-feedback" role="alert">
                                                    <span><%= user.confirmPasswordError %></span>
                                                </div>
                                                <% } %> 
                                            </div>
                                        </div>
                                        <!-- /.card-body -->
                        
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.card -->
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
<%- include('../layouts/footer') -%>
